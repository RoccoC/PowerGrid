{
  "name": "power-grid",
  "version": "0.0.2",
  "description": "An insanely fast React tree grid",
  "main": "dist/cjs/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Eric Rowell",
  "license": "UNLICENSED",
  "private": true,
  "watch": {
    "build-and-start": {
      "patterns": [
        "client",
        "server"
      ],
      "extensions": "js, jsx, scss"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/register": "^7.4.4",
    "@emotion/babel-preset-css-prop": "^10.0.27",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "babel-loader": "^8.0.6",
    "npm-watch": "^0.6.0",
    "typescript": "^4.0.2",
    "uglify-es": "^3.3.9",
    "uglifycss": "0.0.29",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5"
  },
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "scripts": {
    "start": "npm install && npm run build",
    "build": "npm run clean && webpack && npm run copy-html",
    "copy-html": "cp ./demo/index.html public/index.html",
    "minify": "./node_modules/uglify-es/bin/uglifyjs public/js/PowerGrid.js -o public/js/PowerGrid.js && ./node_modules/uglifycss/uglifycss public/css/PowerGrid.css --output public/css/PowerGrid.css",
    "clean": "rm -rf ./public && mkdir ./public",
    "watch": "npm-watch"
  }
}
